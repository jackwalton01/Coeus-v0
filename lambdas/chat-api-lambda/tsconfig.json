{
  "compilerOptions": {
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
